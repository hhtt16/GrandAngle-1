{{ form_start(form) }}
<div class="row">
    <div class="row col-md-6">
        <div class="row align-items-center">
            <img class="img-fluid" src="{{ asset("uploads/avatars/" ~ user.photo) }}" alt="avatar">
                {{ form_widget(form.photo, {'attr': {'value': user.photo}}) }}
        </div>
        <div class="mt-5">
            <div class="form-group">
                {{ form_row(form.lastname) }}
            </div>
            <div class="form-group">
                {{ form_row(form.firstname) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group">
                {{ form_row(form.phone) }}
            </div>
            <div class="form-group">
                {{ form_row(form.password) }}
            </div>
            <div class="form-group">
                {{ form_row(form.birth_date) }}
            </div>
        </div>
    </div>
        <div class="col-md-6 mt-5 align-items-center">
        <div class="form-group">
            {{ form_row(form.created_at) }}
        </div>
            <div class="form-group">
                {{ form_label(form.roles) }}
                <ul class="navbar-nav">
                    {% for role in form.roles %}
                        <li class="nav_item">{{ form_widget(role) }} {{ form_label(role) }}</li>
                    {% endfor %}
                </ul>
            </div>
            <div class="form-group">
                {{ form_row(form.hire_date) }}
            </div>
        
            <div class="form-group">
                {{ form_row(form.address) }}
            </div>
            <div class="form-group">
                {{ form_row(form.postal_code) }}
            </div>
            <div class="form-group">
                {{ form_row(form.city) }}
            </div>
            <div class="form-group">
                <label for="newPsw">Nouveau mot de passe</label>
                <input type="password" name="newPsw" id="newPsw">
            </div>
            <div class="form-group">
                <label for="newPswConfirm">Confirmer nouveau mot de passe</label>
                <input type="password" name="newPswConfirm" id="newPswConfirm">
            </div>
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-outline-warning">{{ button_label|default('Cr√©er') }}</button>
    </div>
    {{ form_end(form) }}
    
{{ form_start(form) }}
<div class="row">
    <div class="row mt-5 col-md-6">
        <div class="row align-items-center">
            <img class="img-fluid" src="{{ asset("uploads/avatars/" ~ user.photo) }}" alt="avatar">
                {{ form_widget(form.photo)}}
        </div>
        <div class="mt-5">
            <div class="form-group">
                {{ form_row(form.lastname) }}
            </div>
            <div class="form-group">
                {{ form_row(form.firstname) }}
            </div>
            <div class="form-group">
                {{ form_row(form.email) }}
            </div>
            <div class="form-group">
                {{ form_row(form.phone) }}
            </div>
        </div>
    </div>
        <div class="col-md-6 mt-5 align-items-center">
            <div class="form-group row">
            <div class="col-md-6">
                <h3>Date d'embauche</h3>
                <h5>{{ user.hireDate|date('d-m-Y') }}</h5>
            </div>
            <div class="col-md-6">
                <h3>Rôles</h3>
                <ul class="navbar-nav">
                    {% for role in user.roles %}
                        {% if role == "ROLE_ADMIN" %}
                            <li class="nav-item">Administrateur</li>
                        {% else %}
                            <li class="nav-item">Collaborateur</li> 
                        {% endif %}
                    {% endfor %}
                </ul>
            </div>
            </div>
            <div class="form-group mt-5">
                {{ form_row(form.address) }}
            </div>
            <div class="form-group">
                {{ form_row(form.postal_code) }}
            </div>
            <div class="form-group">
                {{ form_row(form.city) }}
            </div>
            <div class="form-group">
                {{ form_row(form.password) }}
            </div>
        </div>
    </div>
    <div class="text-center">
        <button class="btn btn-outline-warning">{{ button_label|default('Créer') }}</button>
    </div>
    {{ form_end(form) }}
    